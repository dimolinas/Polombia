<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFB935"
        android:backgroundTint="#FFB935"
        android:text="NIVEL XI"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="50dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/basket"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Se propone incrementar el IVA en productos de primera necesidad como estrategia para generar ingresos inmediatos que se traducen en excenciones progresivas para productos de lujo."
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="#0C295F"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/levelOnceSi"
            android:layout_width="203dp"
            android:layout_height="85dp"
            android:layout_gravity="center_horizontal"
            android:background="#FFB935"
            android:onClick="levelOnceSi"
            android:text="SÍ"
            android:textSize="35dp" />

        <Button
            android:id="@+id/levelOnceNo"
            android:layout_width="209dp"
            android:layout_height="83dp"
            android:layout_gravity="left"
            android:background="#FFB935"
            android:onClick="levelOnceNo"
            android:text="NO"
            android:textSize="35dp" />
    </LinearLayout>

</LinearLayout>